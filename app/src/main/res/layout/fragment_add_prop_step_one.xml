<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/addPropNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:hint="Name" />

    <EditText
        android:id="@+id/addPropPriceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_below="@+id/addPropNameTxt"
        android:inputType="number"
        android:hint="Price" />

    <Button
        android:id="@+id/addPropCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addPropNameTxt"
        android:layout_alignStart="@+id/addPropNameTxt"
        android:layout_below="@+id/addPropPriceTxt"
        android:layout_marginTop="20dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/stepOneNextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addPropNameTxt"
        android:layout_alignRight="@+id/addPropNameTxt"
        android:layout_alignTop="@+id/addPropCancelBtn"
        android:text="Next" />

</RelativeLayout>