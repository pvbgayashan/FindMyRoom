<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.fmr.findmyroom.RoomListActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/roomListToolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/white"
        app:titleTextColor="@color/darkGrey"
        app:titleMarginStart="20dp"
        app:subtitleTextColor="@color/darkGrey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@+id/roomListToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/propResultDescTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="4dp" />

        <ListView
            android:id="@+id/propListView"
            android:layout_below="@+id/propResultDescTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="none" />

    </RelativeLayout>

</RelativeLayout>
