<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Spinner
        android:id="@+id/addPropCountrySpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:entries="@array/countries" />

    <EditText
        android:id="@+id/addPropCityTxt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addPropCountrySpinner"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textCapWords"
        android:hint="City" />

    <Button
        android:id="@+id/stepTwoBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addPropCityTxt"
        android:layout_alignStart="@+id/addPropCityTxt"
        android:layout_below="@+id/addPropCityTxt"
        android:layout_marginTop="20dp"
        android:text="Back" />

    <Button
        android:id="@+id/stepTwoNextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addPropCityTxt"
        android:layout_alignRight="@+id/addPropCityTxt"
        android:layout_alignTop="@+id/stepTwoBackBtn"
        android:text="Next" />

</RelativeLayout>